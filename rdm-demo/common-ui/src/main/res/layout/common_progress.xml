<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="208dp"
    android:layout_height="wrap_content"
    android:minHeight="108dp"
    android:background="@drawable/shape_common_progress"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal|center_vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/progress_anim"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/default_loading_anim" />

    <TextView
        android:id="@+id/tv_progress_msg"
        android:layout_width="146dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dip"
        android:gravity="center"
        android:shadowRadius="1.0"
        android:textColor="@color/black_soft"
        android:text="dddd"
        android:textSize="12sp" />

</LinearLayout>